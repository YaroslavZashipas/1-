import java.util.Scanner;

public class Main {
  public static void main() {

    System.out.println("Тип int:");
    System.out.println("Розмір: " + Integer.BYTES);
    System.out.println("Мін: " + Integer.MIN_VALUE);
    System.out.println("Макс: " + Integer.MAX_VALUE);

    System.out.println();

    System.out.println("Тип double:");
    System.out.println("Розмір: " + Double.BYTES);
    System.out.println("Мін: " + Double.MIN_VALUE);
    System.out.println("Макс: " + Double.MAX_VALUE);

    Scanner scanner = new Scanner(System.in);

    System.out.print("Введіть число: ");
    String text = scanner.nextLine();

    System.out.print("Тип (int або double): ");
    String type = scanner.nextLine();

    if (type.equals("int")) {
      System.out.println(Integer.parseInt(text));
    } else {
      System.out.println(Double.parseDouble(text));
    }

    scanner.close();
  }
}
